# Tatum API Gateway - Environment Variables
# Copy this file to .env and fill in your values

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database

# Tatum API
TATUM_API_KEY=your_tatum_api_key_here
TATUM_API_URL=https://api.tatum.io

# Authentication
SESSION_SECRET=generate_a_secure_random_string_here

# Admin Authentication (REQUIRED for admin operations)
# Generate with: openssl rand -hex 32
ADMIN_API_KEY=generate_a_secure_64_char_hex_string

# Server
NODE_ENV=development
PORT=5000

# Demo Data Seeding (only enable in development/testing)
# Set to "true" to seed demo tenant and usage data
# SEED_DEMO_DATA=true

# Optional: Stripe (for billing integration)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Optional: Redis (for caching/rate limiting)
# REDIS_URL=redis://localhost:6379
